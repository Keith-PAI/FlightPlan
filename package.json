{
  "name": "flight-plan",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "General Aviation Flight Planning Web Application",
  "homepage": "https://keith-pai.github.io/FlightPlan",
  "repository": {
    "type": "git",
    "url": "https://github.com/Keith-PAI/FlightPlan.git"
  },
  "author": "Keith Estes <keithestes@ppaiconsulting.com>",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "dev:https": "vite --https",
    "build": "tsc && vite build",
    "build:staging": "tsc && vite build --mode staging",
    "build:prod": "tsc && vite build --mode production",
    "preview": "vite preview",
    "test": "vitest",
    "test:unit": "vitest run --reporter=verbose",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:coverage": "vitest run --coverage",
    "test:prod": "npm run build && npm run test:e2e",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "deploy": "npm run build && gh-pages -d dist",
    "deploy:staging": "npm run build:staging && gh-pages -d dist -e staging",
    "clean": "rm -rf dist node_modules/.vite",
    "analyze": "npm run build && npx vite-bundle-analyzer dist/stats.html",
    "lighthouse": "lhci autorun"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "zustand": "^4.3.0",
    "react-query": "^3.39.0",
    "tailwindcss": "^3.2.0",
    "@headlessui/react": "^1.7.0",
    "@heroicons/react": "^2.0.0",
    "framer-motion": "^10.0.0",
    "mapbox-gl": "^2.13.0",
    "react-map-gl": "^7.0.0",
    "leaflet": "^1.9.0",
    "react-leaflet": "^4.2.0",
    "react-hook-form": "^7.43.0",
    "zod": "^3.20.0",
    "@hookform/resolvers": "^2.9.0",
    "axios": "^1.3.0",
    "date-fns": "^2.29.0",
    "lodash-es": "^4.17.0",
    "clsx": "^1.2.0",
    "nanoid": "^4.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@types/leaflet": "^1.9.0",
    "@types/lodash-es": "^4.17.0",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitejs/plugin-pwa": "^0.14.0",
    "vite": "^4.3.9",
    "typescript": "^5.0.2",
    "vitest": "^0.32.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/user-event": "^14.4.3",
    "playwright": "^1.31.0",
    "eslint": "^8.45.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "prettier": "^2.8.8",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "gh-pages": "^5.0.0",
    "@vitest/coverage-v8": "^0.32.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run type-check && npm run test:unit"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}